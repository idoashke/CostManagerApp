doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width,\ initial-scale=1,\ shrink-to-fit=no')
    title
    link(rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css')
    link(rel='stylesheet' href='https://unpkg.com/bootstrap-table@1.16.0/dist/bootstrap-table.min.css')
  body
    .container
      br
      br
      br
      h1.text.text-dark.text-center
        | Report for the chosen date ( #{chosenDate} ) :
      br
      br
      table.table-striped.border-success
        thead.thead-dark
          tr
            th(data-field='title' data-sortable='true')
              span.text-light
                | Title
            th(data-field='description' data-sortable='true')
              span.text-light
                | Description
            th(data-field='category' data-sortable='true')
              span.text-light
                | Category
            th(data-field='sum' data-sortable='true')
              span.text-light
                | Sum
            th(data-field='date' data-sortable='true')
              span.text-light
                | Date
            th(data-field='userId')
              span.text-light
                | ID
      br
      br
      h5 Total Sum: #{totalSum}
      br
      br
      br
      br
      .modal-footer
        h6 &copy; Ido Ashkenazi

